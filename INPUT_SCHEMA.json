{
  "title": "Kenya Real Estate Scraper Input",
  "description": "Configuration for scraping real estate listings from Kenyan and EAC classifieds",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "sources": {
      "title": "Sources",
      "description": "List of classifieds to scrape",
      "type": "array",
      "editor": "stringList",
      "default": ["buyrentkenya", "jiji"],
      "items": {
        "type": "string",
        "enum": ["buyrentkenya", "jiji"]
      }
    },
    "listingType": {
      "title": "Listing Type",
      "description": "Type of listings to scrape",
      "type": "string",
      "editor": "select",
      "default": "all",
      "enum": ["all", "sale", "rent"]
    },
    "propertyType": {
      "title": "Property Type",
      "description": "Type of properties to scrape",
      "type": "string",
      "editor": "select",
      "default": "all",
      "enum": ["all", "house", "apartment", "land", "commercial"]
    },
    "location": {
      "title": "Location",
      "description": "Filter by location/region (e.g., Nairobi, Mombasa, Kisumu)",
      "type": "string",
      "editor": "textfield",
      "default": ""
    },
    "maxListings": {
      "title": "Max Listings",
      "description": "Maximum number of listings to scrape per source",
      "type": "integer",
      "default": 100,
      "minimum": 1,
      "maximum": 10000
    },
    "currency": {
      "title": "Output Currency",
      "description": "Currency for normalized prices",
      "type": "string",
      "editor": "select",
      "default": "KES",
      "enum": ["KES", "USD"]
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "description": "Proxy settings for the scraper",
      "type": "object",
      "editor": "proxy",
      "sectionCaption": "Proxy configuration",
      "sectionDescription": "Configure proxy settings to avoid blocks"
    }
  },
  "required": ["sources"]
}
